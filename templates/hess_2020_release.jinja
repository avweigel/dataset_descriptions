{%- for field in fields %}
{% if field == 'Title' -%}
## {{fields.Title}}
{%- elif field == 'Subtitle' -%}
### {{fields.Subtitle}}
{%- else -%}
<details closed>
<summary><b>{{field}}</b></summary>
<ul>
{%- for item in fields[field] %}
{% if fields[field] is mapping -%}
<li>{{item}}: {{fields[field][item]}}</li>
{%- else %}
<li>{{item}}</li>
{%- endif -%}
{%- endfor -%}
</ul>
</details>
{%- endif -%}
{%- endfor -%}