{%- for field in fields %}
{% if field == 'Title' -%}
### {{fields.Title}}
{% elif field == 'Summary' -%}
{%- for item in fields[field] %}
#### **{{item}}**: {{fields[field][item]}}  
{%- endfor -%}
{%- else -%}
<details closed>
<summary><b>{{field}}</b></summary>
<ul>
{%- for item in fields[field] %}
{% if fields[field] is mapping -%}
<li><strong>{{item}}</strong>: {{fields[field][item]}}</li>
{%- else %}
<li>{{item}}</li>
{%- endif -%}
{%- endfor -%}
</ul>
</details>
{%- endif -%}
{%- endfor -%}